generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(uuid()) // Equivalente a PrimaryGeneratedColumn('uuid')
  email     String   @unique // Equivalente a unique: true
  password  String   @map("password") // El equivalente de select: false no existe en Prisma
  fullname  String
  isActive  Boolean  @default(true) // Equivalente a default: true
  roles     String[] @default(["user"]) // Equivalente a array: true y default: ['user']

  @@map("users") // Para mapear a la tabla "users" en lugar de "User"
}
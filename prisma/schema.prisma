generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id        String   @id @default(uuid()) // Equivalente a PrimaryGeneratedColumn('uuid')
  email     String   @unique // Equivalente a unique: true
  password  String    // El equivalente de select: false no existe en Prisma
  fullName  String @map("full_name")
  isActive  Boolean? @default(true) @map("is_active")
  roles     String[] @default(["user"]) // Equivalente a array: true y default: ['user']

  @@map("users") // Para mapear a la tabla "users" en lugar de "User"
}

model Product {
  id          String   @id @default(uuid()) // Mapea el UUID con un valor por defecto generado
  description String   @db.VarChar(250)     // Limita la longitud a 250 caracteres
  brand       String?  @db.VarChar(250)     // Campo opcional (puede ser nulo)
  stock       Int?                             // Campo opcional (puede ser nulo)
  price       Decimal  @db.Decimal(7, 2)     // Define la columna como decimal con precisi√≥n 7,2

  @@map("product")                           // Mapea el modelo a la tabla "product"
}